@{
    Layout = null;
}
@*Diseño de la pagina web que se visualizara en cada una de las pestañas creadas*@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Estilos/Style.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <div>
        @*Inicio de la barra de menu*@

        <div class="container">
            <section class="main row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
                        <a class="navbar-brand">Menú</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="~/VentaComics/Listar"><b>Comics </b><span class="sr-only"></span></a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" href="~/VentaComics/Alta"><b>¡Agrega un Comic!</b><span class="sr-only"></span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/VentaComics/MarvelvsDc"><b>Marvel VS Dc</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/VentaComics/Dc"><b>DC Comics</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/VentaComics/Marvel"><b>Marvel</b></a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </section>
        </div>

        @*Fin de la barra de menu*@
        @RenderBody();
    </div>
    <footer>
        <a> Mundo de Super Herores </a><br />
        @*Super Comics <br />*@
        <b> Integrantes: Victoria Susana Gonzales Osorio, Manuel David Sanches Benoit y Fernando Luna Hernández 5° "D"</b>
    </footer>
</body>
</html>
